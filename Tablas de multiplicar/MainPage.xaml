<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tablas_de_multiplicar.MainPage">

    <ScrollView>
        <VerticalStackLayout Margin="25, 25, 25, 25">
            <Image Source="tablas.png" WidthRequest="300"/>
            <Label Margin="10, 10, 10, 10" FontFamily="Century Gothic" FontSize="Medium">Ingrese el número de la tabla que desea ver:</Label>
            <Entry x:Name="Número" Placeholder="Número de tabla" Margin="10, 10, 10, 10" FontFamily="Century Gothic" FontSize="Medium"></Entry>
            <Button x:Name="Button" Text="Ver tabla de multiplicar" Clicked="ButtonClicked" Margin="10, 10, 10, 10" FontFamily="Century Gothic" FontSize="Medium"></Button>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
